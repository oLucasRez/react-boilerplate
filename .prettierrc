{
  "semi": true,
  "tabWidth": 2,
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "all",
  "jsxSingleQuote": true,
  "bracketSpacing": true,

  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@(.*)/domain/(.*)$",
    "^@(.*)/data/(.*)$",
    "^@(.*)/infra/(.*)$",
    "^@(.*)/presentation/(.*)$",
    "^@(.*)/validation/(.*)$",
    "^@(.*)/main/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
